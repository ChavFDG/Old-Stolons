@model IndexViewModel
@{
    ViewData["Title"] = "Gérer son compte";
}

<h2>@ViewData["Title"].</h2>
<p class="text-success">@ViewData["StatusMessage"]</p>
<div>
    <h4>Changer vos informations de compte</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>Informations générales :</dt>
        <dd>
            [
            <a asp-controller="Manage" asp-action="ChangeUserInformations">Changer ces informations générales</a>
            ]
        </dd>
        <dt>Mot de passe :</dt>
        <dd>
            [
            <a asp-controller="Manage" asp-action="ChangePassword">Changer son mot de passe</a>
            ]
        </dd>
    </dl>
</div>
