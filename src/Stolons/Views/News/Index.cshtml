@using System.Security.Claims
@using Stolons.Services

@model IEnumerable<Stolons.Models.News>


@{
    ViewData["Title"] = "Nouvelles de l'association et de ces producteurs";
}

<h2>@ViewData["Title"]</h2>


@if (User.IsSignedIn())
{
    if (    User.IsInRole(Configurations.Role.Administrator.ToString())
||  User.IsInRole(Configurations.Role.Volunteer.ToString())
||  User.IsInRole(Configurations.UserType.Producer.ToString()))
    {
        <p>
            <a asp-action="Create">Ajouter une nouvelle</a>
        </p>
    }
}
<table class="table">
        @foreach (var item in Model.OrderByDescending(x => x.DateOfPublication))
            {
            <tr>
                <td  class="tdImageNews">
                    <div class="newsThumnail">
                        <img src="@Html.DisplayFor(modelItem => item.ImageLink)" class="responsiveImage" />
                    </div>
                </td>
                <td>
                    <h3>@Html.DisplayFor(modelItem => item.Title)</h3>
                    <p>
                        Publi&eacute; par ??? le @Html.DisplayFor(modelItem => item.DateOfPublication)
                        @if (User.IsInRole(Configurations.Role.Administrator.ToString())
                        || User.IsInRole(Configurations.Role.Volunteer.ToString()))
                        //Ou c'est la news de l'utilisateur
                        {
                            <a asp-action="Edit" asp-route-id="@item.Id">Editer </a><a asp-action = "Delete" asp-route-id = "@item.Id">| Supprimer</a>
                        }
                    </p>
                    @Html.DisplayFor(modelItem => item.Message)
                </td>
            </tr>
        }
</table>
