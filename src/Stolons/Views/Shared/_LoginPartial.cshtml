@using System.Security.Claims

@if (User.IsSignedIn())
{
    <form asp-controller="Accounts" asp-action="LogOff" method="post" id="logoutForm" class="navbar-right">
        <ul class="nav navbar-nav navbar-right">
            <li>
                <a asp-controller="Manage" asp-action="Index" title="Manage">Bienvenue @User.GetUserName() !</a>
            </li>
            <li>
                <button type="submit" class="btn btn-link navbar-btn navbar-link">Se déconnecter</button>
            </li>
        </ul>
    </form>
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li><a asp-controller="Accounts" asp-action="Login">S'identifier</a></li>
    </ul>
}
